{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "build",
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ]
}
